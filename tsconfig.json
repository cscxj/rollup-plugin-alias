{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2017"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "."
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
